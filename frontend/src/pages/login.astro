---
import LoginForm from '../components/_LoginForm.jsx';
---

<html lang="en">
  <head>
    <title>Login Page</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/src/styles/global.css" rel="stylesheet" />
  </head>
  <body class="bg-white font-sans">
    <div class="h-screen flex">
      <!-- Left column (Login form) -->
      <div class="w-1/2 flex flex-col justify-center items-center bg-white p-10">
        <h2 class="text-4xl font-semibold mb-8">Welcome back!</h2>
        <p class="text-gray-600 mb-8">Enter your credentials to access your account</p>
        <LoginForm client:load/>
      </div>
      <!-- Right column (Image) -->
      <div class="w-1/2 bg-gray-100">
        <img src="/images/login-image.webp" alt="Login Image" class="object-cover w-full h-full" />
      </div>
    </div>
  </body>
</html>